<?xml version="1.0" encoding="UTF-8"?>

<!-- Автобусная система - 3 маршрута по 7 остановок -->

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Тип транспорта - автобус -->
    <vType id="bus" vClass="bus" length="12.0" width="2.5" maxSpeed="20" accel="1.2" decel="3.0" color="1,0.5,0" personCapacity="50"/>

    <!-- Маршрут 1: Северный (красный) по главной улице -->
    <route id="route1" edges="main_street_1 main_street_2 main_street_3" color="red">
        <stop busStop="stop1_1" duration="20"/>
        <stop busStop="stop1_2" duration="20"/>
        <stop busStop="stop1_3" duration="30"/>
        <stop busStop="stop1_4" duration="20"/>
        <stop busStop="stop1_5" duration="30"/>
        <stop busStop="stop1_6" duration="20"/>
        <stop busStop="stop1_7" duration="20"/>
    </route>

    <!-- Маршрут 2: Южный (синий) по южной улице -->
    <route id="route2" edges="south_street_1 south_street_2 south_street_3" color="blue">
        <stop busStop="stop2_1" duration="20"/>
        <stop busStop="stop2_2" duration="20"/>
        <stop busStop="stop2_3" duration="20"/>
        <stop busStop="stop2_4" duration="20"/>
        <stop busStop="stop2_5" duration="30"/>
        <stop busStop="stop2_6" duration="20"/>
        <stop busStop="stop2_7" duration="20"/>
    </route>

    <!-- Маршрут 3: Западный (зелёный) через весь город -->
    <route id="route3" edges="west_street_1 west_street_2 south_street_1 south_street_2 south_street_3" color="green">
        <stop busStop="stop3_1" duration="20"/>
        <stop busStop="stop3_2" duration="20"/>
        <stop busStop="stop3_3" duration="20"/>
        <stop busStop="stop3_4" duration="20"/>
        <stop busStop="stop2_5" duration="30"/>
        <stop busStop="stop3_6" duration="20"/>
        <stop busStop="stop3_7" duration="20"/>
    </route>

    <!-- Автобусы на маршруте 1 (интервал 300 секунд = 5 минут) -->
    <vehicle id="bus1_1" type="bus" route="route1" depart="0" line="1" color="red"/>
    <vehicle id="bus1_2" type="bus" route="route1" depart="300" line="1" color="red"/>
    <vehicle id="bus1_3" type="bus" route="route1" depart="600" line="1" color="red"/>
    <vehicle id="bus1_4" type="bus" route="route1" depart="900" line="1" color="red"/>

    <!-- Автобусы на маршруте 2 (интервал 300 секунд) -->
    <vehicle id="bus2_1" type="bus" route="route2" depart="50" line="2" color="blue"/>
    <vehicle id="bus2_2" type="bus" route="route2" depart="350" line="2" color="blue"/>
    <vehicle id="bus2_3" type="bus" route="route2" depart="650" line="2" color="blue"/>
    <vehicle id="bus2_4" type="bus" route="route2" depart="950" line="2" color="blue"/>

    <!-- Автобусы на маршруте 3 (интервал 300 секунд) -->
    <vehicle id="bus3_1" type="bus" route="route3" depart="100" line="3" color="green"/>
    <vehicle id="bus3_2" type="bus" route="route3" depart="400" line="3" color="green"/>
    <vehicle id="bus3_3" type="bus" route="route3" depart="700" line="3" color="green"/>
    <vehicle id="bus3_4" type="bus" route="route3" depart="1000" line="3" color="green"/>

    <!-- Пассажиры на остановках -->

    <!-- Пассажиры на маршруте 1 -->
    <person id="p1_1" depart="10">
        <ride from="main_street_1" to="main_street_3" busStop="stop1_1" lines="1"/>
    </person>
    <person id="p1_2" depart="180">
        <ride from="main_street_1" to="main_street_2" busStop="stop1_2" lines="1"/>
    </person>
    <person id="p1_3" depart="320">
        <ride from="main_street_1" to="main_street_3" busStop="stop1_3" lines="1 3"/>
    </person>

    <!-- Пассажиры на хабе "Торговый центр" (все маршруты) -->
    <person id="p2_1" depart="20">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>
    <person id="p2_2" depart="150">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>
    <person id="p2_3" depart="280">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>
    <person id="p2_4" depart="380">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>
    <person id="p2_5" depart="520">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>
    <person id="p2_6" depart="650">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_5" lines="1 2 3"/>
    </person>

    <!-- Пассажиры на маршруте 2 -->
    <person id="p3_1" depart="40">
        <ride from="south_street_1" to="main_street_3" busStop="stop2_1" lines="2"/>
    </person>
    <person id="p3_2" depart="220">
        <ride from="south_street_1" to="main_street_2" busStop="stop2_2" lines="2"/>
    </person>
    <person id="p3_3" depart="420">
        <ride from="south_street_1" to="main_street_3" busStop="stop2_3" lines="2"/>
    </person>

    <!-- Пассажиры на маршруте 3 -->
    <person id="p4_1" depart="50">
        <ride from="west_street_1" to="east_street_2" busStop="stop3_1" lines="3"/>
    </person>
    <person id="p4_2" depart="250">
        <ride from="west_street_1" to="main_street_2" busStop="stop3_1" lines="3"/>
    </person>
    <person id="p4_3" depart="450">
        <ride from="west_street_1" to="east_street_3" busStop="stop3_2" lines="3"/>
    </person>

    <!-- Дополнительные пассажиры на разных остановках -->
    <person id="p5_1" depart="60">
        <ride from="main_street_1" to="main_street_3" busStop="stop1_4" lines="1"/>
    </person>
    <person id="p5_2" depart="260">
        <ride from="main_street_2" to="main_street_3" busStop="stop1_6" lines="1"/>
    </person>

    <person id="p6_1" depart="90">
        <ride from="south_street_2" to="main_street_3" busStop="stop2_4" lines="2"/>
    </person>
    <person id="p6_2" depart="340">
        <ride from="south_street_2" to="main_street_3" busStop="stop2_6" lines="2"/>
    </person>

    <person id="p7_1" depart="100">
        <ride from="center_street_2" to="east_street_3" busStop="stop3_4" lines="3"/>
    </person>
    <person id="p7_2" depart="380">
        <ride from="east_street_2" to="east_street_3" busStop="stop3_6" lines="3"/>
    </person>

    <!-- Пассажиры на хабе "Центральная площадь" -->
    <person id="p8_1" depart="70">
        <ride from="main_street_1" to="east_street_2" busStop="stop1_3" lines="1 3"/>
    </person>
    <person id="p8_2" depart="290">
        <ride from="main_street_1" to="main_street_3" busStop="stop1_3" lines="1 3"/>
    </person>
    <person id="p8_3" depart="480">
        <ride from="main_street_1" to="east_street_3" busStop="stop1_3" lines="1 3"/>
    </person>

</routes>
